<div class="page-header">
  <h1>User</h1>
</div>

<p class="lead"><%= @user.name %></p>
<% if current_user and ! current_user.followers.include? @user %>
<%= link_to "Follow", follow_user_path(@user), method: :post, class: "btn btn-default" %>
<% end %>

<h2>Posts</h2>

<%= render @posts %>
<%= link_to "Home", root_path, class: "btn btn-default" %>
